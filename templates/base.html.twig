<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}blog!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
									  and uncomment the following Encore helpers to start using Symfony UX #}
		<link rel="stylesheet" href="/assets/css/styles.css"/>
		<link rel="stylesheet" href="/assets/css/bootstrap.min.css"/>

		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}


	</head>
	<body>


		<nav class="navbar navbar-expand-lg navbar-dark bgnav">
			<div class="container-fluid">
				<a class="navbar-brand aaa" href="/">BlogInfo</a>


				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav me-auto">
						<li class="nav-item active">
							<a class="nav-link aaa" href="/">Home
								<span class="visually-hidden">(current)</span>
							</a>
						</li>

						{% if app.user %}
							<li class="nav-item">
								<a class="nav-link aaa" href="{{path('security_logout')}}">Deconnexion</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link aaa" href="{{path('security_register',{user_type:'user'})}}">Inscription</a>
							</li>
							<li class="nav-item">
								<a class="nav-link aaa" href="{{path('security_login')}}">Connexion</a>
							</li>
						{% endif %}


					</ul>
					<form class="d-flex" method="post" action="{{path('recherche')}}">
						<input class="form-control me-sm-2" type="text" placeholder="Search" name="title">
						<input class="form-control me-sm-2" type="date" name="date" >
						<button class="btn btn-secondary my-2 my-sm-0" type="submit">Recherche</button>
					</form>
				</div>
			</div>
		</nav>
		<div class="container"> {% block body %}{% endblock  %}
			</div>


		</body>
	</html>
