{% extends 'base.html.twig' %}

{% block title %}Hello !
{% endblock %}

{% block body %}


	<div class=" container marginins register rounded shadow-lg p-3  bg-white rounded">
		<div class="row">
			<div class="col-md-3 register-left">
				<img src="https://image.ibb.co/n7oTvU/logo_white.png" alt=""/>
				<h3>Bienvenue</h3>

				<a class="btn btn-light" href="{{path('security_login')}}" name="" value="Login">
					Connexion</a><br/>
			</div>
			<div class="col-md-9 register-right">

				<div class="tab-content" id="myTabContent">
					<div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
						<h3 class="register-heading">Inscription</h3>
						{{form_start(form)}}
						<div class="row register-form">

							<div class="col-md-6">
								<div class="form-group">
									{{form_row(form.username, {'label':"Pseudo"})}}
								</div>
								<div class="form-group">
									{{form_row(form.firstname, {'label':"Prenom"})}}

								</div>
								<div class="form-group">
									{{form_row(form.lastname, {'label':"Nom"})}}
								</div>


							</div>
							<div class="col-md-6">
								<div class="form-group">
									{{form_row(form.email, {'label':"Email"})}}
								</div>
								<div class="form-group">
									{{form_row(form.password, {'label':"Mot de passe"})}}
								</div>
								<div class="form-group">
									{{form_row(form.passwordConfirm, {'label':"Confimation du mdp"})}}
								</div>


							</div>
							<button class="btn btn-primary mt-2 col-3 mgleft">
								S'inscrire</button>
							{{form_end(form)}}


						</div>

					</div>

				</div>
			</div>
		</div>
	</div>

{% endblock %}
