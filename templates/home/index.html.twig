{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center">Bienvenue dans la page d'accueil</h1>
	</div>
	<div class="row">
		<div class="col-8">
			<div class="row">
				{% for article in articles %}
					<div class="card col-md-3 mt-2">
						<p class="date">Ecrit le
							{{article.creatAt | date("d/m/Y")}}
							Ã 
							{{article.creatAt | date("H:i")}}

						</p>
						<img src="/assets/blog/images/{{article.image}}" width="100%" class="card-img-top" alt="{{article.image}}">


						<div class="card-body">
							<h5 class="card-title">{{article.title}}</h5>

							<a href="{{path('show', {id : article.id})}}" class="btn btn-danger">En savoir plus</a>


						</div>

					</div>

				{% endfor %}
			</div>
		</div>
		<div class="col-4">
			<h2>Category</h2>
			{% for category in categorys %}
				<ul class="list-group">
					<li class="list-group-item d-flex justify-content-between align-items-center border-0">
						<a href="{{path('show_article',{'id':category.id})}}">{{category.title}}</a>
						<span class="badge bg-success rounded-pill">{{category.articles| length}}
							article(s)</span>
					</li>

				</ul>


			{% endfor %}

		</div>

	</div>

{% endblock %}
